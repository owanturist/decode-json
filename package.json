{
  "name": "decode-json",
  "version": "1.0.0",
  "description": "Convert unknown JSON values to TypeScript safe structures",
  "main": "index.js",
  "repository": "git@github.com:owanturist/decode-json.git",
  "author": "Anton Ovechkin <owanturist@gmail.com>",
  "license": "BSD-3-Clause",
  "scripts": {
    "clean": "rm -rf ./build",
    "prebuild": "npm run clean",
    "postbuild": "cp package.json ./build & cp README.md ./build",
    "build": "tsc -p tsconfig.prod.json",
    "test": "ava",
    "test:watch": "npm test -- --watch",
    "lint": "eslint . --config=.eslintrc.prod.json --ext=js,ts",
    "prettify": "prettier . --write",
    "typecheck": "tsc -p tsconfig.prod.json --noEmit"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "./scripts/git-commit-message.sh $HUSKY_GIT_PARAMS",
      "pre-commit": "npm run typecheck && lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,json,md}": [
      "prettier --write"
    ],
    "**/*.{js,ts}": [
      "eslint --config=.eslintrc.prod.json --fix"
    ]
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "ava": "^3.14.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-ava": "^11.0.0",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
