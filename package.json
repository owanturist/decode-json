{
  "name": "decode-json",
  "version": "1.0.0",
  "description": "Convert unknown JSON values to TypeScript safe structures",
  "main": "index.js",
  "repository": "git@github.com:owanturist/decode-json.git",
  "author": "Anton Ovechkin <owanturist@gmail.com>",
  "license": "BSD-3-Clause",
  "scripts": {
    "clean": "rm -rf ./build",
    "cpmeta": "cp package.json ./build & cp README.md ./build",
    "prebuild": "npm run clean",
    "postbuild": "npm run cpmeta && npm run minify",
    "build": "ttsc -p tsconfig.prod.json",
    "test": "ava",
    "test:watch": "npm test -- --watch",
    "lint": "eslint . --config=.eslintrc.prod.json --ext=js,ts",
    "prettify": "prettier . --write",
    "typecheck": "ttsc -p tsconfig.json --noEmit",
    "minify": "npm run minify:decoder && npm run minify:error-stringify",
    "minify:decoder": "terser build/index.js -c -m --module --mangle-props regex=/^__/ -o build/index.min.js --source-map",
    "minify:error-stringify": "terser build/error-to-human-readable.js -c -m --module -o build/error-to-human-readable.min.js --source-map"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "./scripts/git-commit-message.sh $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run typecheck && npm run test"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,json,md}": [
      "prettier --write"
    ],
    "**/*.{js,ts}": [
      "eslint --config=.eslintrc.prod.json --fix"
    ]
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "ava": "^3.14.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-ava": "^11.0.0",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "terser": "^5.5.1",
    "ts-node": "^9.1.1",
    "ts-transformer-minify-privates": "^0.3.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.1.3"
  }
}
