{
  "name": "decode-json",
  "version": "1.0.0",
  "description": "Convert unknown JSON values to TypeScript safe structures",
  "main": "index.js",
  "repository": "git@github.com:owanturist/decode-json.git",
  "author": "Anton Ovechkin <owanturist@gmail.com>",
  "license": "BSD-3-Clause",
  "scripts": {
    "clean": "rm -rf ./build",
    "prebuild": "npm run clean",
    "postbuild": "cp package.json ./build & cp README.md ./build",
    "build": "tsc -p tsconfig.prod.json",
    "test": "npm run build -- -p tsconfig.json && ava --verbose",
    "lint": "eslint . --config=.eslintrc.prod.json --ext=js,ts",
    "prettify": "prettier . --write"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "./scripts/git-commit-message.sh $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,json,md}": [
      "prettier --write"
    ],
    "**/*.{js,ts}": [
      "eslint --config=.eslintrc.prod.json --fix"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "ava": "^3.12.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-ava": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.13",
    "prettier": "^2.1.1",
    "typescript": "^4.0.2"
  }
}
